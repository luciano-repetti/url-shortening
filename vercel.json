{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "frontend/dist/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "http://localhost:3001/api/$1" },
      { "src": "/(.*)", "dest": "frontend/dist/$1" }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }